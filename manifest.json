{

	"manifest_version" : 2,
	"name" : "Web Inspector",
	"version" : "0.1",
	"author" : "Bruno Sampaio",

	"default_locale" : "en",
	"description" : "",
	"icons" : {
		"16" : "img/logo16.png",
		"48" : "img/logo48.png",
		"128" : "img/logo128.png"
	},

	"background" : {
		"scripts" : [ "js/background.js" ]
	},

	"browser_action" : {
		"default_icon" : "img/icon_inactive.png",
		"name" : "Click to activate or deactivate on current page."
	},

	"content_scripts" : [
		{
			"matches" : [ "http://*/*", "https://*/*" ],
			"css" : [ "css/general.css" ],
			"js" : [ "js/jquery.js", "js/init.js" ]
		}
	],

	"permissions": [
		"http://*/*", 
		"https://*/*"    
	]

}